O(n) time, O(1) space
# Definition for binary tree with next pointer.
# class TreeLinkNode:
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None
#         self.next = None

class Solution:
    # @param root, a tree link node
    # @return nothing
    def connect(self, root):
        p, prev, next_head = root, None, None
        while p or next_head:
            while p:
                if p.left:
                    if not prev:
                        prev, next_head = p.left, p.left
                    else:
                        prev.next = p.left
                        prev = prev.next
            
                if p.right:
                    if not prev:
                        prev, next_head = p.right, p.right
                    else:
                        prev.next = p.right
                        prev = prev.next
            
                p = p.next
            
            p = next_head
            prev, next_head = None, None
