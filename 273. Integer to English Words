class Solution(object):
    def numberToWords(self, num):
        """
        :type num: int
        :rtype: str
        """
        
        if not num: return "Zero"
        
        thousands = ["Thousand", "Million", "Billion"]
        res, thousands_index = [], 0
        while num:
            res = self.convertNumberLessThanAThousand(num%1000)+res
            if num >= 1000 and not num/1000%1000 == 0:
                res = [thousands[thousands_index]]+res
            num /= 1000
            thousands_index += 1
        
        return " ".join(res)
    
    def convertNumberLessThanAThousand(self, num):
        res = []
        ones = ["Zero", "One", "Two", "Three", "Four", "Five", "Six", "Seven", "Eight", "Nine",
                "Ten", "Eleven", "Twelve", "Thirteen", "Fourteen", "Fifteen", "Sixteen", "Seventeen", "Eighteen", "Nineteen"]
        tens = ["Twenty", "Thirty", "Forty", "Fifty", "Sixty", "Seventy", "Eighty", "Ninety"]
        if num >= 100:
            res += [ones[num/100], "Hundred"]
            num %= 100
        
        if num >= 20:
            if num%10:
                return res+[tens[num/10-2], ones[num%10]]
            else:
                return res+[tens[num/10-2]]
        elif num > 0:
            return res+[ones[num]]
        
        return res


class Solution(object):
    def numberToWords(self, num):
        """
        :type num: int
        :rtype: str
        """
        
        if not num: return "Zero"
        
        thousands, t_idx = ["Thousand", "Million", "Billion"], -1
        res = []
        while num > 0:
            remainder = num%1000
            if remainder > 0 and t_idx >= 0:
                res = [thousands[t_idx]]+res
            res = self.convertNumToString(remainder)+res
            t_idx += 1
            num /= 1000
        
        return ' '.join(res)
    
    def convertNumToString(self, num):
        if num == 0: return []
        res = []
        
        less_than_twenty = ["One", "Two", "Three", "Four", "Five", "Six", "Seven", "Eight", "Nine", "Ten",
                               "Eleven", "Twelve", "Thirteen", "Fourteen", "Fifteen", "Sixteen", "Seventeen",
                               "Eighteen", "Nineteen"]
        
        tens_larger_than_ten = ["Twenty", "Thirty", "Forty", "Fifty", "Sixty", "Seventy", "Eighty", "Ninety"]
        
        if num >= 100:
            res += [less_than_twenty[num/100-1], "Hundred"]
            num %= 100
        
        if num >= 20:
            res += [tens_larger_than_ten[num/10-2]]
            num %= 10
        
        if num > 0:
            res += [less_than_twenty[num-1]]
        
        return res
