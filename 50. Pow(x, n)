O(32) time, O(1) space
class Solution(object):
    def myPow(self, x, n):
        """
        :type x: float
        :type n: int
        :rtype: float
        """
        
        if x == 0:
            return 0
        
        res = 1
        m = abs(n)
        cur = x
        while m > 0:
            if m&1:
                res *= cur
            cur *= cur
            m >>= 1
        return res if n >= 0 else 1.0/res
