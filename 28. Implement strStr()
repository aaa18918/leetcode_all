O(n^2) time, O(len(needle)) space
class Solution(object):
    def strStr(self, haystack, needle):
        """
        :type haystack: str
        :type needle: str
        :rtype: int
        """
        
        if not needle:
            return 0
        
        for idx in range(len(haystack)):
            if haystack[idx] == needle[0]:
                if haystack[idx:idx+len(needle)] == needle:
                    return idx
        
        return -1
