O(n) time, O(1) space
class Solution(object):
    def shortestDistance(self, words, word1, word2):
        """
        :type words: List[str]
        :type word1: str
        :type word2: str
        :rtype: int
        """
        
        res, prev, prev_idx = sys.maxint, '', -1
        for idx in range(len(words)):
            if words[idx] in (word1, word2):
                if prev and prev != words[idx]:
                    res = min(res, idx-prev_idx)
                
                prev, prev_idx = words[idx], idx
        
        return res
