class Solution(object):
    def checkPossibility(self, nums):
        """
        :type nums: List[int]
        :rtype: bool
        """
        
        count = 0
        for idx in range(1, len(nums)):
            if nums[idx] < nums[idx-1]:
                count += 1
                if count > 1:
                    return False
                
                if idx > 1 and nums[idx] < nums[idx-2]:
                    nums[idx] = nums[idx-1]
        return True
