class Solution(object):
    def numDecodings(self, s):
        """
        :type s: str
        :rtype: int
        """
        
        len_s = len(s)
        
        if len_s == 0: return 0
        
        MOD = 10**9+7
        e0, e1, e2 = 1, 0, 0
        
        for c in s:
            if c == '*':
                f0 = e0*9+e1*9+e2*6
                f1 = e0
                f2 = e0
            else:
                f0 = (c > '0')*e0 + e1 + (c <= '6')*e2
                f1 = e0 if c == '1' else 0
                f2 = e0 if c == '2' else 0
            
            e0, e1, e2 = f0%MOD, f1, f2
        
        return e0
