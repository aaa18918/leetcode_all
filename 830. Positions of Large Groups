O(n) time, O(n) space
class Solution(object):
    def largeGroupPositions(self, S):
        """
        :type S: str
        :rtype: List[List[int]]
        """
        
        res = []
        left = 0
        for idx in range(1, len(S)):
            if S[idx] != S[idx-1]:
                if idx-left >= 3:
                    res.append([left, idx-1])
                
                left = idx
        
        if len(S)-left >= 3:
            res.append([left, len(S)-1])
        
        return res
