O(n) time, O(1) space
class Solution(object):
    def isStrobogrammatic(self, num):
        """
        :type num: str
        :rtype: bool
        """
        
        mapping = {'6':'9', '9':'6', '0':'0', '1':'1', '8':'8'}
        
        left, right = 0, len(num)-1
        while left <= right:
            if num[left] in mapping and mapping[num[left]] == num[right]:
                left, right = left+1, right-1
            else:
                return False
        
        return True
