class Solution(object):
    def firstMissingPositive(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        
        idx, size = 0, len(nums)
        while idx < size:
            if nums[idx] == idx+1 or nums[idx] <= 0 or nums[idx] > size or nums[nums[idx]-1] == nums[idx]:
                idx += 1
            else:
                aim_idx = nums[idx]-1
                nums[idx], nums[aim_idx] = nums[aim_idx], nums[idx]
        
        for idx in range(len(nums)):
            if nums[idx] != idx+1:
                return idx+1
        
        return size+1
