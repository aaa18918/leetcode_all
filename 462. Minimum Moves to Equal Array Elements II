class Solution(object):
    def minMoves2(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        
        nums.sort()
        if len(nums)%2 == 1:
            mid = nums[len(nums)/2]
        else:
            mid = (nums[len(nums)/2-1]+nums[len(nums)/2])/2
        
        res = 0
        for num in nums:
            res += abs(mid-num)
        return res


class Solution(object):
    def minMoves2(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        
        nums.sort()
        mid = nums[len(nums)/2]
        
        res = 0
        for num in nums:
            res += abs(mid-num)
        return res
