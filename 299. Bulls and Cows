O(n) time, O(n) space
class Solution(object):
    def getHint(self, secret, guess):
        """
        :type secret: str
        :type guess: str
        :rtype: str
        """

        hash_table = collections.defaultdict(int)

        a, b = 0, 0
        for idx in range(len(secret)):
            if secret[idx] == guess[idx]:
                a += 1
                continue

            if hash_table[secret[idx]] < 0:
                b += 1

            if hash_table[guess[idx]] > 0:
                b += 1

            hash_table[secret[idx]] += 1
            hash_table[guess[idx]] -= 1

        return '{}A{}B'.format(a, b)
