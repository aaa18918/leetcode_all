O(n) time, O(1) space
class Solution(object):
    def myAtoi(self, str):
        """
        :type str: str
        :rtype: int
        """
        
        left, right = 0, len(str)-1
        while left <= right and str[left] == ' ':
            left += 1
        
        while left <= right and str[right] == ' ':
            right -= 1
        
        if left > right: return 0
        
        sign = 1
        if str[left] == '-':
            sign, left = -1, left+1
        elif str[left] == '+':
            left += 1
        
        res = 0
        for idx in range(left, right+1):
            if '0' <= str[idx] <= '9':
                res = res*10+ord(str[idx])-ord('0')
            else:
                return max(-2147483648, min(2147483647, sign*res))
        return max(-2147483648, min(2147483647, sign*res))
