O(32) time, O(1) space
class Solution(object):
    def myPow(self, x, n):
        """
        :type x: float
        :type n: int
        :rtype: float
        """
        
        res, positive = 1, n >= 0
        n = abs(n)
        while n > 0:
            if n&1 == 1:
                res *= x
            
            x *= x
            n >>= 1
        return res if positive else 1.0/res
