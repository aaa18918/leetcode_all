O(n) time, O(k) space
class Solution(object):
    def findClosestElements(self, arr, k, x):
        """
        :type arr: List[int]
        :type k: int
        :type x: int
        :rtype: List[int]
        """
        
        left, right = len(arr)-k, len(arr)-1
        while 0 < left and abs(arr[left-1]-x) <= abs(arr[right]-x):
            left, right = left-1, right-1
        
        return arr[left:right+1]
