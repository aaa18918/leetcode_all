O(mn) time, O(1) space
class Solution(object):
    def isMatch(self, s, p):
        """
        :type s: str
        :type p: str
        :rtype: bool
        """
        
        match, star, i, j = -1, -1, 0, 0
        while i < len(s):
            if j < len(p) and (s[i] == p[j] or p[j] == '?'):
                i, j = i+1, j+1
            elif j < len(p) and p[j] == '*':
                match, star = i, j
                j += 1
            elif star > -1:
                match += 1
                i, j = match, star+1
            else:
                return False
        
        while j < len(p):
            if p[j] != '*':
                return False
            
            j += 1
        
        return True
