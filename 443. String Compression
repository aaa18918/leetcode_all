O(n) time, O(1) space
class Solution(object):
    def compress(self, chars):
        """
        :type chars: List[str]
        :rtype: int
        """
        
        if not chars: return 0
        
        length, count = 0, 1
        for i in range(1, len(chars)+1):
            if i != len(chars) and chars[i] == chars[i-1]:
                count += 1
            else:
                chars[length] = chars[i-1]
                length += 1
                
                if count > 1:
                    str_count = str(count)
                    for char in str_count:
                        chars[length] = char
                        length += 1
                    count = 1
                
        return length
