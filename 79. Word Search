O(n^2*m) time, O(n^2) space
class Solution(object):
    def exist(self, board, word):
        """
        :type board: List[List[str]]
        :type word: str
        :rtype: bool
        """
        
        if not word: return True
        if not board: return False
        
        m, n = len(board), len(board[0])
        size = len(word)
        visited = set()
        diff = [(1, 0), (-1, 0), (0, 1), (0, -1)]
        def myDFS(x, y, idx):
            if idx == size:
                return True
            
            visited.add((x, y))
            
            for d in diff:
                new_x, new_y = x+d[0], y+d[1]
                if 0 <= new_x < m and 0 <= new_y < n and board[new_x][new_y] == word[idx] and (new_x, new_y) not in visited and myDFS(new_x, new_y, idx+1):
                    visited.remove((x, y))
                    return True
            
            visited.remove((x, y))
            return False
        
        for i in range(m):
            for j in range(n):
                if board[i][j] == word[0] and myDFS(i, j, 1):
                    return True
        return False
