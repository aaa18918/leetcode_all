class Solution(object):
    def shortestDistance(self, words, word1, word2):
        """
        :type words: List[str]
        :type word1: str
        :type word2: str
        :rtype: int
        """
        
        result = sys.maxint
        prev_index, prev_word = -1, ''
        for index, word in enumerate(words):
            if word in (word1, word2):
                if prev_word and word != prev_word:
                    result = min(index-prev_index, result)
                
                prev_index, prev_word = index, word
        
        return result
