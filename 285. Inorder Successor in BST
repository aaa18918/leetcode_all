O(lgn) time, O(1) space
# Definition for a binary tree node.
# class TreeNode(object):
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None

class Solution(object):
    def inorderSuccessor(self, root, p):
        """
        :type root: TreeNode
        :type p: TreeNode
        :rtype: TreeNode
        """
        
        prev, cur = None, root
        while cur:
            if cur.val > p.val:
                prev, cur = cur, cur.left
            else:
                cur = cur.right
        return prev
