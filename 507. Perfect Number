class Solution(object):
    def checkPerfectNumber(self, num):
        """
        :type num: int
        :rtype: bool
        """
        
        if num <= 1: return False
        cur_sum = 1
        for i in range(2, int(math.sqrt(num))+1):
            if num%i == 0:
                if i*i != num:
                    cur_sum += i+num/i
                else:
                    cur_sum += i
        
        return cur_sum == num
