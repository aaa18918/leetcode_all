O(lgn) time, O(1) space
class Solution(object):
    def searchRange(self, nums, target):
        """
        :type nums: List[int]
        :type target: int
        :rtype: List[int]
        """
        
        left, right = 0, len(nums)-1
        while left < right:
            mid = (left+right)/2
            if nums[mid] == target:
                left = mid
                break
            elif nums[mid] < target:
                left = mid+1
            else:
                right = mid-1
        
        if not nums or nums[left] != target:
            return [-1, -1]
        
        idx = left
        left, right = 0, idx
        while left < right:
            mid = (left+right)/2
            if nums[mid] == target:
                right = mid
            else:
                left = mid+1
        
        res = [left]
        
        left, right = idx, len(nums)-1
        while left < right:
            mid = (left+right)/2
            if nums[mid] == target:
                left = mid+1
            else:
                right = mid-1
        
        idx = left if nums[left] == target else left-1
        res.append(idx)
        return res
