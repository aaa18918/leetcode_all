O(n) time, O(1) space
"""
# Definition for a Node.
class Node(object):
    def __init__(self, val=0, left=None, right=None, next=None):
        self.val = val
        self.left = left
        self.right = right
        self.next = next
"""
class Solution(object):
    def connect(self, root):
        """
        :type root: Node
        :rtype: Node
        """
        
        cur = root
        while cur:
            p, q = cur, None
            while p:
                if p.left:
                    if not q:
                        q, cur = p.left, p.left
                    else:
                        q.next = p.left
                        q = q.next
                
                if p.right:
                    if not q:
                        q, cur = p.right, p.right
                    else:
                        q.next = p.right
                        q = q.next
                
                p = p.next
            
            if not q:
                break
        
        return root
