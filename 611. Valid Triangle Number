class Solution(object):
    def triangleNumber(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """

        nums = sorted(nums)

        res = 0
        for idx in range(len(nums)-1, 1, -1):
            left, right = 0, idx-1
            while left < right:
                if nums[left]+nums[right] > nums[idx]:
                    res += right-left
                    right -= 1
                else:
                    left += 1

        return res
