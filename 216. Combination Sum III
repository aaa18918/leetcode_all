O(C(9,k)) time, O(C(9, k)k) space
class Solution(object):
    def combinationSum3(self, k, n):
        """
        :type k: int
        :type n: int
        :rtype: List[List[int]]
        """
        
        if n <= 0 or k <= 0: return []
        
        res = []
        
        def myDFS(nums, idx, k, n):
            if n == 0:
                if k == 0:
                    res.append(nums)
                return
            
            if k == 0 or idx > 9:
                return
            
            for i in range(idx, 10):
                if i <= n:
                    myDFS(nums+[i], i+1, k-1, n-i)
        
        myDFS([], 1, k, n)
        return res
