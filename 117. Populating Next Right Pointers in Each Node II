O(n) time, O(1) space
# Definition for binary tree with next pointer.
# class TreeLinkNode:
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None
#         self.next = None

class Solution:
    # @param root, a tree link node
    # @return nothing
    def connect(self, root):
        if not root: return
        
        p, q, next_head = root, None, None
        while p or next_head:
            if not p:
                p = next_head
                q, next_head = None, None
                
            if p.left:
                if q:
                    q.next = p.left
                    q = q.next
                else:
                    q, next_head = p.left, p.left
            
            if p.right:
                if q:
                    q.next = p.right
                    q = q.next
                else:
                    q, next_head = p.right, p.right
            
            p = p.next
