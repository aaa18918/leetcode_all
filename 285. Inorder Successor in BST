O(lgn) time, O(1) space
# Definition for a binary tree node.
# class TreeNode(object):
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None

class Solution(object):
    def inorderSuccessor(self, root, p):
        """
        :type root: TreeNode
        :type p: TreeNode
        :rtype: TreeNode
        """
        
        node, parent = root, None
        while node:
            if p.val >= node.val:
                node = node.right
            else:
                node, parent = node.left, node
        return parent
