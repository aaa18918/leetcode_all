O(n) time, O(1) space
class Solution(object):
    def numDecodings(self, s):
        """
        :type s: str
        :rtype: int
        """
        
        if not s: return 0
        
        len_s = len(s)
        right = 1
        left = 1 if s[len_s-1] != '0' else 0
        
        for i in range(len_s-2, -1, -1):
            if (len_s-i)%2 == 0:
                if s[i] == '0':
                    right = 0
                elif int(s[i:i+2]) <= 26:
                    right = left+right
                else:
                    right = left
            else:
                if s[i] == '0':
                    left = 0
                elif int(s[i:i+2]) <= 26:
                    left = right+left
                else:
                    left = right
        return left if len_s%2 == 1 else right
