O(nlgn) time, O(1) space
class Solution(object):
    def findMinArrowShots(self, points):
        """
        :type points: List[List[int]]
        :rtype: int
        """
        
        def myCMP(left, right):
            if left[1] < right[1]:
                return -1
            elif left[1] > right[1]:
                return 1
            else:
                return left[0]-right[0]
        
        points.sort(cmp = myCMP)
        count, left = 0, 0
        for idx in range(len(points)):
            if idx == 0 or points[idx][0] > points[left][1]:
                count += 1
                left = idx
        return count
