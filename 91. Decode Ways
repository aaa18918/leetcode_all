O(n) time, O(1) space
class Solution(object):
    def numDecodings(self, s):
        """
        :type s: str
        :rtype: int
        """
        
        if not s or s[0] == '0':
            return 0
        
        a, b = 1, 1
        for idx in range(1, len(s)):
            if s[idx] == '0':
                if s[idx-1] in '12':
                    a, b = b, a
                else:
                    return 0
            elif '1' <= s[idx] <= '6':
                if s[idx-1] in '12':
                    a, b = b, a+b
                else:
                    a, b = b, b
            else:
                if s[idx-1] == '1':
                    a, b = b, a+b
                else:
                    a, b = b, b
        
        return b
