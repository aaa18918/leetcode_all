class Solution(object):
    def countBattleships(self, board):
        """
        :type board: List[List[str]]
        :rtype: int
        """
        
        if not board or not board[0]: return 0
        
        count = 0
        m, n = len(board), len(board[0])
        
        for i in range(m):
            for j in range(n):
                if board[i][j] == 'X':
                    if i == 0 and j == 0:
                        count += 1
                    elif i == 0:
                        if board[i][j-1] != 'X':
                            count += 1
                    elif j == 0:
                        if board[i-1][j] != 'X':
                            count += 1
                    else:
                        if board[i-1][j] != 'X' and board[i][j-1] != 'X':
                            count += 1
        
        return count

class Solution(object):
    def countBattleships(self, board):
        """
        :type board: List[List[str]]
        :rtype: int
        """
        
        if not board or not board[0]: return 0
        
        count = 0
        m, n = len(board), len(board[0])
        
        for i in range(m):
            for j in range(n):
                if board[i][j] == 'X':
                    if i > 0 and board[i-1][j] == 'X':
                        continue
                    if j > 0 and board[i][j-1] == 'X':
                        continue
                    count += 1
        
        return count
        
