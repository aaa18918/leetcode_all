O(3^n) time, O(3^n) space
class Solution(object):
    def letterCombinations(self, digits):
        """
        :type digits: str
        :rtype: List[str]
        """
        
        mapping = {'2':'abc', '3':'def', '4':'ghi', '5':'jkl', '6':'mno', '7':'pqrs', '8':'tuv', '9':'wxyz'}
        
        def myHelp(digits):
            return [char+r for char in mapping[digits[0]] for r in myHelp(digits[1:])] if digits else ['']
        
        return myHelp(digits) if digits else []
