class Solution(object):
    def maxSubArrayLen(self, nums, k):
        """
        :type nums: List[int]
        :type k: int
        :rtype: int
        """
        
        hash_table = {0: -1}
        res, cur_sum = 0, 0
        
        for idx, num in enumerate(nums):
            cur_sum += num
            if cur_sum-k in hash_table:
                res = max(res, idx-hash_table[cur_sum-k])
            
            if cur_sum not in hash_table:
                hash_table[cur_sum] = idx
        
        return res
