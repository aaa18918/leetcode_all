O(n) time, O(1) space
class Solution(object):
    def myAtoi(self, str):
        """
        :type str: str
        :rtype: int
        """
        
        str = str.strip()
        if not str or (str[0] not in '+-' and str[0] < '0' and str[0] > '9'):
            return 0
        
        sign = -1 if str[0] == '-' else 1
        start = 1 if str[0] in '+-' else 0
        res = 0
        for idx in range(start, len(str)):
            if '0' <= str[idx] <= '9':
                res = res*10+int(str[idx])
            else:
                break
        
        return min(2**31-1, max(-2**31, sign*res))
