O(n) time, O(n) space
class Solution(object):
    def longestConsecutive(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        
        hash_set = set()
        for num in nums:
            hash_set.add(num)
        
        max_length = 0
        for num in nums:
            if num in hash_set:
                hash_set.remove(num)
                left, right = num, num
                while left-1 in hash_set:
                    left -= 1
                    hash_set.remove(left)
                
                while right+1 in hash_set:
                    right += 1
                    hash_set.remove(right)
                
                max_length = max(max_length, right-left+1)
        return max_length
