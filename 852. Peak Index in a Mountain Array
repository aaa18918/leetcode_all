O(lgn) time, O(1) space
class Solution(object):
    def peakIndexInMountainArray(self, A):
        """
        :type A: List[int]
        :rtype: int
        """
        
        left, right = 1, len(A)-2
        while left < right:
            mid = (left+right)/2
            if A[mid-1] < A[mid] > A[mid+1]:
                return mid
            
            if A[mid-1] >= A[mid]:
                right = mid-1
            else:
                left = mid+1
        
        return left
