class Solution(object):
    def findMaxLength(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        
        record, count, res = {0: -1}, 0, 0
        for idx, num in enumerate(nums):
            if num == 0:
                count -= 1
            else:
                count += 1
            
            if count not in record:
                record[count] = idx
            else:
                res = max(res, idx-record[count])
        return res


