O(n) time, O(n) space
class Solution(object):
    def longestConsecutive(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        
        my_set = set(nums)
        res = 0
        for num in nums:
            if num in my_set:
                left, right = num, num
                my_set.remove(num)
                while left-1 in my_set:
                    left -= 1
                    my_set.remove(left)
                
                while right+1 in my_set:
                    right += 1
                    my_set.remove(right)
                
                res = max(res, right-left+1)
        return res
