O(n) time, O(1) space
class Solution(object):
    def numDecodings(self, s):
        """
        :type s: str
        :rtype: int
        """
        
        if not s or s[0] == '0':
            return 0
        
        a, b = 1, 1
        for idx in range(1, len(s)):
            if s[idx] == '0' and s[idx-1] not in '12':
                return 0
            
            num = int(s[idx-1:idx+1])
            if num == 10 or num == 20:
                a, b = b, a
            elif num < 10:
                a, b = b, b
            elif num <= 26:
                a, b = b, a+b
            else:
                a, b = b, b
        
        return b
