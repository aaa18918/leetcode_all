O(n) time, O(1) space
class Solution(object):
    def isStrobogrammatic(self, num):
        """
        :type num: str
        :rtype: bool
        """
        
        mapping = {'6':'9', '1':'1', '9':'6', '8':'8', '0':'0'}
        size = len(num)
        mid = int(round(size*1.0/2))
        for idx in range(mid):
            if mapping.get(num[idx]) == num[size-1-idx]:
                continue
            else:
                return False
        return True
