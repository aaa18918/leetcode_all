O(n) time, O(1) space
# Definition for binary tree with next pointer.
# class TreeLinkNode:
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None
#         self.next = None

class Solution:
    # @param root, a tree link node
    # @return nothing
    def connect(self, root):
        p, prev, next_head = root, None, None
        while p or next_head:
            if not p:
                p, prev, next_head = next_head, None, None
            
            if p.left:
                if prev:
                    prev.next = p.left
                    prev = prev.next
                else:
                    prev, next_head = p.left, p.left
            
            if p.right:
                if prev:
                    prev.next = p.right
                    prev = prev.next
                else:
                    prev, next_head = p.right, p.right
            
            p = p.next
