class Solution(object):
    def findContestMatch(self, n):
        """
        :type n: int
        :rtype: str
        """
        
        cur_pair = [str(i) for i in range(1, n+1)]
        
        while len(cur_pair) > 1:
            temp = []
            len_cur_pair = len(cur_pair)
            for i in range(len_cur_pair/2):
                temp.append("({},{})".format(cur_pair[i], cur_pair[len_cur_pair-1-i]))
            cur_pair = temp
        return cur_pair[0]


class Solution(object):
    def findContestMatch(self, n):
        """
        :type n: int
        :rtype: str
        """
        
        cur_pair = [str(i) for i in range(1, n+1)]
        
        while n > 1:
            cur_pair = ["({},{})".format(cur_pair[i], cur_pair[n-1-i]) for i in range(n/2)]
            n >>= 1
        return cur_pair[0]
