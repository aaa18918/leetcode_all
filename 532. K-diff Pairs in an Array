class Solution(object):
    def findPairs(self, nums, k):
        """
        :type nums: List[int]
        :type k: int
        :rtype: int
        """
        
        count, my_counter = 0, collections.Counter(nums)
        for num in my_counter.keys():
            if k == 0 and my_counter[num] > 1 or k > 0 and num+k in my_counter:
                count += 1
        return count

