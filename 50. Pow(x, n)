O(32) time, O(1) space
class Solution(object):
    def myPow(self, x, n):
        """
        :type x: float
        :type n: int
        :rtype: float
        """
        
        res = 1
        m = n if n >= 0 else -n
        while m > 0:
            if m&1:
                res *= x
            
            m >>= 1
            x *= x
        
        return res if n >= 0 or res == 0 else 1.0/res
