O(n) time, O(n) space
class Solution(object):
    def convert(self, s, numRows):
        """
        :type s: str
        :type numRows: int
        :rtype: str
        """
        
        res = ""
        len_s = len(s)
        for row in range(numRows):
            if 0 < row < numRows-1:
                for idx in range(row, len_s, numRows*2-2):
                    res += s[idx]
                    mid = idx+2*(numRows-1-row)
                    if mid < len_s:
                        res += s[mid]
            else:
                for idx in range(row, len_s, max(numRows*2-2, 1)):
                    res += s[idx]
        return res
