O(n) time, O(1) space
class Solution(object):
    def romanToInt(self, s):
        """
        :type s: str
        :rtype: int
        """
        
        mapping = {'M': 1000, 'CM': 900, 'D': 500, 'CD': 400, 'C': 100,
                  'XC': 90, 'L': 50, 'XL':40, 'X': 10, 'IX': 9, 'V': 5, 'I': 1}
        
        size = len(s)
        
        res = 0
        for idx in range(size-1, -1, -1):
            res = res+mapping[s[idx]] if idx == size-1 or mapping[s[idx]] >= mapping[s[idx+1]] else res-mapping[s[idx]]
        
        return res
