O(n) time, O(n) space
class Solution(object):
    def addBinary(self, a, b):
        """
        :type a: str
        :type b: str
        :rtype: str
        """
        
        res = []
        cur_sum = 0
        i, j = len(a)-1, len(b)-1
        while i >= 0 or j >= 0 or cur_sum > 0:
            if i >= 0 and j >= 0:
                cur_sum += int(a[i])+int(b[j])
                i -= 1
                j -= 1
            elif i >= 0:
                cur_sum += int(a[i])
                i -= 1
            elif j >= 0:
                cur_sum += int(b[j])
                j -= 1
            
            res.append(str(cur_sum%2))
            cur_sum /= 2
        
        return ''.join(res[::-1])
