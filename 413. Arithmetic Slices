class Solution(object):
    def numberOfArithmeticSlices(self, A):
        """
        :type A: List[int]
        :rtype: int
        """
        
        start, count = 0, 0
        for i in range(2, len(A)):
            if A[i]-A[i-1] != A[i-1]-A[i-2]:
                if i-start > 2:
                    n = i-start
                    count += (n-1)*(n-2)/2
                start = i-1
        
        if len(A)-start >= 3:
            n = len(A)-start
            count += (n-1)*(n-2)/2
        return count
