class Solution(object):
    def findMaxAverage(self, nums, k):
        """
        :type nums: List[int]
        :type k: int
        :rtype: float
        """
        
        res = sum(nums[:k])
        cur_sum = res
        for i in range(k, len(nums)):
            cur_sum = cur_sum+nums[i]-nums[i-k]
            res = max(res, cur_sum)
        return res*1.0/k
