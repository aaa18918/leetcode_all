O(n) time, O(n) space
# Definition for a binary tree node.
# class TreeNode(object):
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None

class Solution(object):
    def buildTree(self, inorder, postorder):
        """
        :type inorder: List[int]
        :type postorder: List[int]
        :rtype: TreeNode
        """
        
        hash_table = {}
        for idx, val in enumerate(inorder):
            hash_table[val] = idx
        
        def myDFS(left, right):
            if left > right:
                return None
            
            root_val = postorder.pop()
            idx = hash_table[root_val]
            
            root = TreeNode(root_val)
            
            right_tree = myDFS(idx+1, right)
            left_tree = myDFS(left, idx-1)
            
            root.left, root.right = left_tree, right_tree
            return root
        
        return myDFS(0, len(inorder)-1)
