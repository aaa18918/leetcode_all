O(lgn) time, O(1) space
class Solution(object):
    def hIndex(self, citations):
        """
        :type citations: List[int]
        :rtype: int
        """
        
        size = len(citations)
        left, right = 0, size-1
        
        while left <= right:
            mid = (left+right)/2
            if citations[mid] == size-mid:
                return size-mid
            elif citations[mid] < size-mid:
                left = mid+1
            else:
                right = mid-1
        
        return size-left
