O(n) time, O(26) space
class Solution(object):
    def isIsomorphic(self, s, t):
        """
        :type s: str
        :type t: str
        :rtype: bool
        """
        
        if len(s) != len(t):
            return False
        
        my_map, my_set = {}, set()
        for idx in range(len(s)):
            if s[idx] in my_map:
                if my_map[s[idx]] != t[idx]:
                    return False
            else:
                if t[idx] in my_set:
                    return False
                else:
                    my_map[s[idx]] = t[idx]
                    my_set.add(t[idx])
        
        return True
