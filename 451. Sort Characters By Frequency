O(n) time, O(n) space
class Solution(object):
    def frequencySort(self, s):
        """
        :type s: str
        :rtype: str
        """
        
        counter = collections.Counter(s)
        times = ['' for _ in range(len(s))]
        
        for c, t in counter.iteritems():
            times[t-1] += c*t
        
        res = ''
        for idx in range(len(times)-1, -1, -1):
            if times[idx]:
                res += times[idx]
        
        return res
