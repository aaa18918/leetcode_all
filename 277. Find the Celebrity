O(n) time, O(1) space
# The knows API is already defined for you.
# @param a, person a
# @param b, person b
# @return a boolean, whether a knows b
# def knows(a, b):

class Solution(object):
    def findCelebrity(self, n):
        """
        :type n: int
        :rtype: int
        """
        
        if n < 1:
            return -1
        
        left = 0
        for idx in range(1, n):
            if knows(left, idx):
                left = idx
        
        for idx in range(n):
            if idx != left:
                if not knows(idx, left) or knows(left, idx):
                    return -1
        
        return left
