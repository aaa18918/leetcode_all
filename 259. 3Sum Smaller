O(n^2) time, O(1) space
class Solution(object):
    def threeSumSmaller(self, nums, target):
        """
        :type nums: List[int]
        :type target: int
        :rtype: int
        """
        
        nums.sort()
        size, count = len(nums), 0
        for idx in range(size-2):
            left, right = idx+1, size-1
            while left < right:
                if nums[idx]+nums[left]+nums[right] < target:
                    count += right-left
                    left += 1
                else:
                    right -= 1
        return count
