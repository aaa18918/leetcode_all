O(rows) time, O(sentence) space
class Solution(object):
    def wordsTyping(self, sentence, rows, cols):
        """
        :type sentence: List[str]
        :type rows: int
        :type cols: int
        :rtype: int
        """
        
        s = ' '.join(sentence)+' '
        total = 0
        for idx in range(rows):
            total += cols-1
            if s[total%len(s)] == ' ':
                total += 1
            elif s[total%len(s)+1] == ' ':
                total += 2
            else:
                while total > 0 and s[(total-1)%len(s)] != ' ':
                    total -= 1
        return total/len(s)
 
