O(32) time, O(1) space
class Solution(object):
    def myPow(self, x, n):
        """
        :type x: float
        :type n: int
        :rtype: float
        """
        
        if x == 0:
            return 0
        
        m = abs(n)
        res = 1
        while m > 0:
            if m&1:
                res *= x
            
            x *= x
            m >>= 1
        
        return res if n > 0 else 1.0/res
