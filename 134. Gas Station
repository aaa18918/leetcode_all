O(n) time, O(1) space
class Solution(object):
    def canCompleteCircuit(self, gas, cost):
        """
        :type gas: List[int]
        :type cost: List[int]
        :rtype: int
        """
        
        if not gas:
            return -1
        
        left, right, cur_gas = 0, -1, gas[-1]-cost[-1]
        while left < len(gas)+right:
            if cur_gas >= 0:
                cur_gas += gas[left]-cost[left]
                left += 1
            else:
                cur_gas += gas[right-1]-cost[right-1]
                right -= 1
        
        return left if cur_gas >= 0 else -1
