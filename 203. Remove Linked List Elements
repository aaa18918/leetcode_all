# Definition for singly-linked list.
# class ListNode(object):
#     def __init__(self, x):
#         self.val = x
#         self.next = None

class Solution(object):
    def removeElements(self, head, val):
        """
        :type head: ListNode
        :type val: int
        :rtype: ListNode
        """
        
        fake_head = ListNode(0)
        fake_head.next = head
        
        p = fake_head
        while p:
            if p.next and p.next.val == val:
                p.next = p.next.next
            
            if not p.next or p.next.val != val: p = p.next
        return fake_head.next


# Definition for singly-linked list.
# class ListNode(object):
#     def __init__(self, x):
#         self.val = x
#         self.next = None

class Solution(object):
    def removeElements(self, head, val):
        """
        :type head: ListNode
        :type val: int
        :rtype: ListNode
        """
        
        fake_head = ListNode(0)
        fake_head.next = head
        
        p = fake_head
        while p.next:
            if p.next.val == val:
                p.next = p.next.next
            else:
                p = p.next

        return fake_head.next
