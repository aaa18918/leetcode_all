class ZigzagIterator(object):

    def __init__(self, v1, v2):
        """
        Initialize your data structure here.
        :type v1: List[int]
        :type v2: List[int]
        """
        
        self.v = map(None, v1, v2)
        self.len_v = len(self.v)
        self.i = 0
        self.j = 0
        self.count = len(v1)+len(v2)

    def next(self):
        """
        :rtype: int
        """

        while (self.v)[self.i][self.j] is None:
            if self.j == 1:
                self.i +=1
            self.j = 1-self.j
        
        res = (self.v)[self.i][self.j]
        if self.j == 1:
            self.i += 1
        self.j = 1-self.j
        self.count -= 1
        return res
        
    def hasNext(self):
        """
        :rtype: bool
        """
        
        return self.count > 0

# Your ZigzagIterator object will be instantiated and called as such:
# i, v = ZigzagIterator(v1, v2), []
# while i.hasNext(): v.append(i.next())


class ZigzagIterator(object):

    def __init__(self, v1, v2):
        """
        Initialize your data structure here.
        :type v1: List[int]
        :type v2: List[int]
        """
        
        self.v1, self.v2 = v1, v2
        self.i, self.j = 0, 0
        self.use1 = True if self.v1 else False

    def next(self):
        """
        :rtype: int
        """
        
        res = self.v1[self.i] if self.use1 else self.v2[self.j]
        if self.use1:
            self.i += 1
        else:
            self.j += 1
        
        if self.j < len(self.v2) and self.i < len(self.v1):
            self.use1 = not self.use1
        elif self.j < len(self.v2):
            self.use1 = False
        else:
            self.use1 = True
        
        return res
        
    def hasNext(self):
        """
        :rtype: bool
        """
        
        return self.i+self.j < len(self.v1)+len(self.v2)

# Your ZigzagIterator object will be instantiated and called as such:
# i, v = ZigzagIterator(v1, v2), []
# while i.hasNext(): v.append(i.next())

