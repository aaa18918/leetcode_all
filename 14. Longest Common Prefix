O(mn) time, O(n) space
class Solution(object):
    def longestCommonPrefix(self, strs):
        """
        :type strs: List[str]
        :rtype: str
        """

        def get_common_prefix(left, right):
            idx = 0
            while idx < min(len(left), len(right)):
                if left[idx] != right[idx]:
                    break
                
                idx += 1
            
            return left[:idx]
        
        return reduce(get_common_prefix, strs) if strs else ''
