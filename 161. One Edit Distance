O(n) time, O(1) space
class Solution(object):
    def isOneEditDistance(self, s, t):
        """
        :type s: str
        :type t: str
        :rtype: bool
        """
        
        if abs(len(s)-len(t)) > 1:
            return False
        
        if len(s) == len(t):
            diff = 0
            for idx in range(len(s)):
                if s[idx] != t[idx]:
                    diff += 1
                    
                    if diff > 1:
                        return False
            
            return diff == 1
        else:
            i, j, diff = 0, 0, 0
            while i < len(s) and j < len(t):
                if s[i] != t[j]:
                    diff += 1
                    if diff > 1:
                        return False
                    
                    if len(s) < len(t):
                        j += 1
                    else:
                        i += 1
                else:
                    i, j = i+1, j+1
            
            return diff == 1 or i == j
