O(n) time, O(n) space
# Definition for a binary tree node.
# class TreeNode(object):
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None

class Solution(object):
    def buildTree(self, inorder, postorder):
        """
        :type inorder: List[int]
        :type postorder: List[int]
        :rtype: TreeNode
        """
        
        hash_table = {}
        for idx, num in enumerate(inorder):
            hash_table[num] = idx
        
        def myDFS(left, right):
            if left > right: return None
            
            val = postorder.pop()
            node, idx = TreeNode(val), hash_table[val]
            node.right = myDFS(idx+1, right)
            node.left = myDFS(left, idx-1)
            return node
        
        return myDFS(0, len(inorder)-1)
